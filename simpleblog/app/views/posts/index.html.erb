
<div class="container">
  <h1>Posts do Blog</h1>
  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>Título do post</th>
      <th>Conteúdo do post</th>
      <th>Links</th>
    </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td>
            <%= link_to "Ver mais", post_path(post), :class => 'btn btn-outline-primary' %>
            <%= link_to "Editar", edit_post_path(post), :class => 'btn btn-outline-primary' %>
            <%= link_to "Deletar", post_path(post), method: :delete, data:{confirm: 'Tem certeza?'}, :class => 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>